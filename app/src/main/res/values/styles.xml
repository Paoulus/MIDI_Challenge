<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TemaMidi" parent="Platform.V21.AppCompat.Light" >
        <item name="android:colorBackground">@color/background_material_light_1</item>
        <item name="android:colorPrimaryDark">@color/primary_dark_material_light</item>
        <item name="android:colorPrimary">@color/primary_material_light</item>
        <item name="android:navigationBarColor">@android:color/black</item>
    </style>

    <style name="TemaNuovoMIDI" parent="AppTheme" >
        <item name="android:colorBackground">@color/background_material_light</item>
        <item name="android:navigationBarColor">@color/colorPrimary</item>
    </style>

    <style name="button" parent="@android:style/Widget.Button">
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:textColor">#FFFFFFFF</item>
        <item name="android:shadowColor">#FF000000</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">-0</item>
        <item name="android:shadowRadius">0</item>
        <item name="android:textSize">25dip</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/button</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
    </style>

</resources>
