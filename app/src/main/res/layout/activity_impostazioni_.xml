<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_impostazioni_"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="midiapp.midi_challenge.Impostazioni_Activity">

    <Button
        android:text="INFO"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_info"
        android:onClick="openNewActivity"
        style="@android:style/Widget.Material.Button.Colored"
        android:background="@drawable/roundcorner"
        android:textSize="18sp"
        android:layout_marginBottom="82dp"
        android:layout_above="@+id/btn_import"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="IMPORTA DATI"
        android:layout_height="wrap_content"
        android:id="@+id/btn_import"
        style="@android:style/Widget.Material.Button.Colored"
        android:background="@drawable/roundcorner"
        android:textSize="18sp"
        android:layout_width="160dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="ESPORTA DATI"
        android:layout_height="wrap_content"
        android:id="@+id/btn_export"
        style="@android:style/Widget.Material.Button.Colored"
        android:background="@drawable/roundcorner"
        android:textSize="18sp"
        android:layout_width="160dp"
        android:layout_alignTop="@+id/btn_import"
        android:layout_alignStart="@+id/btn_import"
        android:layout_marginTop="124dp" />

</RelativeLayout>
