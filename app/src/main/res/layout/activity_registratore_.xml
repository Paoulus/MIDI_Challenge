<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:id="@+id/drawer_layout">

    <RelativeLayout
    android:id="@+id/activity_registratore_"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="midiapp.midi_challenge.Registratore_Activity">

        <Button
            android:id="@+id/btnReg"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:background="@drawable/roundcorner"
            android:text="START"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:layout_marginTop="56dp"
            android:layout_below="@+id/registratore_img"
            android:layout_centerHorizontal="true" />

        <Button
            android:id="@+id/btnRip"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="22dp"
            android:background="@drawable/roundcorner"
            android:text="Riproduci"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:layout_below="@+id/btnReg"
            android:layout_alignStart="@+id/btnReg" />

        <ImageView
            android:id="@+id/registratore_img"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginTop="53dp"
            android:background="@drawable/registratore_icona"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnRip"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="23dp"
        android:text="..." />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab_shareRec"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:clickable="true"
            app:fabSize="mini"
            app:srcCompat="@drawable/ic_menu_share"
            android:layout_below="@+id/textView3"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp" />

        <!--android:id="@+id/imageView"-->
</RelativeLayout>
    <android.support.design.widget.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        app:headerLayout="@layout/nav_header_activity__main_restyled"
        app:menu="@menu/activity__main_restyled_drawer" />

</android.support.v4.widget.DrawerLayout>

    <!--style="@android:style/Widget.Material.Button.Colored" -->
