<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_info"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="midiapp.midi_challenge.Info_Activity">

    <TextView
        android:text="Paolo Chiste"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Sviluppatori"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="22dp"
        android:id="@+id/Paolo"
        android:textSize="26sp" />

    <TextView
        android:text="Norman Gabalin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="19dp"
        android:id="@+id/Norman"
        android:textSize="26sp"
        android:layout_below="@+id/Luca"
        android:layout_alignStart="@+id/Sviluppatori" />

    <TextView
        android:text="Luca Bazzanella"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Luca"
        android:textSize="26sp"
        android:layout_marginTop="18dp"
        android:layout_below="@+id/Paolo"
        android:layout_alignEnd="@+id/Sviluppatori" />

    <TextView
        android:text="Versione:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Versione"
        android:textSize="28sp"
        android:textStyle="normal|bold"
        android:layout_alignBottom="@+id/nVersione"
        android:layout_alignStart="@+id/Sviluppatori"
        android:layout_marginStart="8dp" />

    <TextView
        android:text="Sviluppatori:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Sviluppatori"
        android:textSize="32sp"
        android:textStyle="normal|bold"
        android:layout_marginTop="44dp"
        android:layout_below="@+id/Versione"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="1.0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/nVersione"
        android:textSize="28sp"
        android:layout_marginTop="46dp"
        android:layout_below="@+id/logo"
        android:layout_alignEnd="@+id/logo" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/ic_launcher"
        android:id="@+id/logo"
        android:minWidth="150dp"
        android:minHeight="150dp"
        android:layout_marginTop="39dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
